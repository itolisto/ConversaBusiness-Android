<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:focusableInTouchMode="true"
	android:background="@color/default_white"
	tools:context="ee.app.conversabusiness.ActivitySignUp" >

	<RelativeLayout
		android:layout_gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<android.support.design.widget.TextInputLayout
			android:id="@+id/tilNameSignUp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp" >

			<EditText
				android:id="@+id/etSignUpName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:gravity="bottom"
				android:hint="@string/username"
				android:inputType="text"
				android:textColor="@color/default_black"
				android:textColorHint="@color/default_gray"
				android:textSize="18sp" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/tilEmailSignUp"
			android:layout_below="@id/tilNameSignUp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp" >

			<EditText
				android:id="@+id/etSignUpEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:gravity="bottom"
				android:hint="@string/email"
				android:inputType="textEmailAddress"
				android:textColor="@color/default_black"
				android:textColorHint="@color/default_gray"
				android:textSize="18sp" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/tilPasswordSignUp"
			android:layout_below="@id/tilEmailSignUp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp" >

			<EditText
				android:id="@+id/etSignUpPassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:gravity="bottom"
				android:hint="@string/password"
				android:inputType="textPassword"
				android:textColor="@color/default_black"
				android:textColorHint="@color/default_gray"
				android:textSize="18sp" />
		</android.support.design.widget.TextInputLayout>

		<Button
			android:id="@+id/btnSignUpUp"
			android:layout_width="175dp"
			android:layout_height="35dp"
			android:layout_below="@id/tilPasswordSignUp"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="22dp"
			android:gravity="center"
			android:text="@string/SIGN_UP"
			android:textColor="@drawable/textcolor_white_state"
			android:textSize="20sp"
			android:background="@drawable/button_shape_white" />

		<include android:id="@+id/rlNoInternetNotification"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			layout="@layout/no_internet_notification" />

	</RelativeLayout>

</ScrollView>