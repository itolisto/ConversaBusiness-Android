<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/darker_gray"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <PreferenceCategory
        android:title="@string/notification_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <SwitchPreferenceCompat
            android:key="@string/in_app_checkbox_preference_key"
            android:title="@string/notification_checkbox_preference"
            android:summary="@string/summary_notification_checkbox_preference"
            android:layout_width="wrap_content"
            android:defaultValue="true"
            android:layout_height="wrap_content" />

        <SwitchPreferenceCompat
            android:key="@string/notification_checkbox_preference_key"
            android:title="@string/in_app_checkbox_preference"
            android:summary="@string/summary_in_app_checkbox_preference"
            android:layout_width="wrap_content"
            android:defaultValue="true"
            android:layout_height="wrap_content" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/account_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditTextPreference
            android:key="@string/email_edittext_preference_key"
            android:title="@string/email_edittext_preference"
            android:summary="@string/dialog_email_edittext_preference"
            android:dialogTitle="@string/dialog_email_edittext_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditTextPreference
            android:key="@string/name_edittext_preference_key"
            android:title="@string/name_edittext_preference"
            android:summary="@string/dialog_name_edittext_preference"
            android:dialogTitle="@string/dialog_name_edittext_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditTextPreference
            android:key="@string/password_edittext_preference_key"
            android:title="@string/password_edittext_preference"
            android:summary="@string/dialog_password_edittext_preference"
            android:dialogTitle="@string/dialog_password_edittext_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Preference
            android:key="@string/logout_preference_key"
            android:title="@string/logout_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/about_attributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Preference
            android:key="@string/share_preference_key"
            android:title="@string/share_preference"
            android:summary="@string/summary_share_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <PreferenceScreen
            android:title="@string/go_intent_preference"
            android:summary="@string/summary_go_intent_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.appconversa.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </PreferenceScreen>

        <PreferenceScreen
            android:key="use_terms_preference"
            android:title="@string/terms_of_use_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.appconversa.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </PreferenceScreen>

        <PreferenceScreen
            android:key="privacy_politics_preference"
            android:title="@string/privacy_politics_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.appconversa.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>
