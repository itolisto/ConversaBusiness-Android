<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:clickable="true"
    android:background="@color/image_view_background" >

    <ee.app.conversabusiness.view.TouchImageView
        android:id="@+id/tivPhotoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <ProgressBar
        android:id="@+id/pbLoadingForImage"
        style="@style/CustomProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnCloseImage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/image_view_text"
        android:textSize="12sp"
        android:text="@string/close" />
    <!--android:background="@drawable/button_transparent_background"-->
</RelativeLayout>