<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/actionbar_preference"/>

    <ScrollView
        android:padding="16dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ee.app.conversabusiness.view.MediumTextView
                android:text="@string/sett_notification_push_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ee.app.conversabusiness.view.MediumTextView
                        android:text="@string/sett_notification_sound_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal" />

                    <ee.app.conversabusiness.view.LightTextView
                        android:text="@string/sett_notification_sound_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="4" />
                </LinearLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/scPushSound"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:background="@drawable/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ee.app.conversabusiness.view.MediumTextView
                        android:text="@string/sett_notification_preview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal" />

                    <ee.app.conversabusiness.view.LightTextView
                        android:text="@string/sett_notification_preview_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="4" />
                </LinearLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/scPushPreview"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <ee.app.conversabusiness.view.MediumTextView
                android:text="@string/sett_notification_inapp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ee.app.conversabusiness.view.MediumTextView
                        android:text="@string/sett_notification_sound_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal" />

                    <ee.app.conversabusiness.view.LightTextView
                        android:text="@string/sett_notification_inapp_sound_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="4" />
                </LinearLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/scInAppSound"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:background="@drawable/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ee.app.conversabusiness.view.MediumTextView
                        android:text="@string/sett_notification_preview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal" />

                    <ee.app.conversabusiness.view.LightTextView
                        android:text="@string/sett_notification_inapp_preview_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColorSecondary"
                        android:maxLines="4" />
                </LinearLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/scInAppPreview"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>