<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:focusableInTouchMode="true"
	android:background="@color/default_white"
	tools:context="ee.app.conversabusiness.ActivitySignUp" >

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<ee.app.conversabusiness.view.BoldTextView
			android:id="@+id/btvTitle"
			android:text="@string/SIGN_UP"
			android:layout_marginTop="40dp"
			android:textSize="18sp"
			android:layout_gravity="center_horizontal"
			android:textColor="@color/default_black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<android.support.design.widget.TextInputLayout
			android:layout_marginTop="14dp"
			android:id="@+id/tilEmailSignUp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp" >

			<EditText
				android:id="@+id/etSignUpEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:gravity="bottom"
				android:hint="@string/email"
				android:inputType="textEmailAddress"
				android:textColor="@color/default_black"
				android:textColorHint="@color/default_gray"
				android:textSize="18sp" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/tilPasswordSignUp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp" >

			<EditText
				android:id="@+id/etSignUpPassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:gravity="bottom"
				android:hint="@string/password"
				android:inputType="textPassword"
				android:textColor="@color/default_black"
				android:textColorHint="@color/default_gray"
				android:textSize="18sp" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:id="@+id/tilBirthdaySignUp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp" >

			<EditText
				android:id="@+id/etSignUpBirthday"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:gravity="bottom"
				android:maxLength="10"
				android:hint="@string/birthday"
				android:inputType="none"
				android:clickable="true"
				android:maxLines="1"
				android:textColor="@color/default_black"
				android:textColorHint="@color/default_gray"
				android:textSize="18sp" />
		</android.support.design.widget.TextInputLayout>

		<RadioGroup
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="14dp"
			android:layout_marginStart="14dp"
			android:layout_marginLeft="14dp"
			android:layout_marginRight="14dp"
			android:layout_marginEnd="14dp"
			android:weightSum="2"
			android:checkedButton="@+id/rbFemale"
			android:orientation="horizontal"
			android:id="@+id/rgGender">

			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/gender_male"
				android:id="@+id/rbMale"
				android:layout_weight="1" />

			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/gender_female"
				android:id="@+id/rbFemale"
				android:layout_weight="1" />
		</RadioGroup>

		<Button
			android:id="@+id/btnSignUpUp"
			android:layout_width="175dp"
			android:layout_height="35dp"
			android:layout_gravity="center"
			android:layout_marginTop="22dp"
			android:gravity="center"
			android:enabled="false"
			android:text="@string/SIGN_UP"
			android:textColor="@drawable/textcolor_white_state"
			android:textSize="20sp"
			android:background="@drawable/button_shape_white" />

		<include android:id="@+id/rlNoInternetNotification"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			layout="@layout/no_internet_notification" />

	</LinearLayout>

</ScrollView>