<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlNotificationBody"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/push_notification_background"
    android:clickable="true"
    android:padding="2dp" >

    <RelativeLayout
        android:id="@+id/rlImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:gravity="center" >
        
        <ee.app.conversabusiness.view.CircleImageView
		    xmlns:app="http://schemas.android.com/apk/res-auto"
		    android:id="@+id/ivUserImage"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_centerInParent="true"
		    android:contentDescription="@null"
		    app:border_color="@android:color/transparent"/>

        <ProgressBar
            android:id="@+id/pbLoadingForImage"
            style="@style/CustomProgressBar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:visibility="visible" />
    </RelativeLayout>

    <ee.app.conversabusiness.view.MediumTextView
        android:id="@+id/tvUserName"
        style="@style/TransparentDialogTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rlImage"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toLeftOf="@+id/btnClose"
        android:layout_toStartOf="@+id/btnClose"
        android:layout_toRightOf="@+id/rlImage"
        android:layout_toEndOf="@+id/rlImage"
        android:gravity="start|bottom"
        android:singleLine="true"
        android:text="@string/test_string"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <ee.app.conversabusiness.view.RegularTextView
        android:id="@+id/tvNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toLeftOf="@+id/btnClose"
        android:layout_toStartOf="@+id/btnClose"
        android:layout_toRightOf="@+id/rlImage"
        android:layout_toEndOf="@+id/rlImage"
        android:gravity="start|bottom"
        android:singleLine="true"
        android:text="@string/test_string"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/list_selector_background"
        android:contentDescription="@null"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/close_icon"
        android:clickable="true" />

</RelativeLayout>