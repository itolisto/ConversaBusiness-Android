<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvBusinessImage"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        fresco:fadeDuration="300"
        fresco:actualImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/business_default"
        fresco:placeholderImageScaleType="centerInside"
        fresco:failureImage="@drawable/business_default"
        fresco:failureImageScaleType="centerInside"
        fresco:retryImage="@drawable/business_default"
        fresco:retryImageScaleType="centerInside"
        fresco:progressBarImage="@drawable/rotate_loading"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:roundAsCircle="true" />

    <ee.app.conversabusiness.view.RegularTextView
        android:maxLines="1"
        android:textSize="13sp"
        android:ellipsize="end"
        android:layout_marginTop="7dp"
        android:id="@+id/rtvHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ee.app.conversabusiness.view.LightTextView
        android:maxLines="1"
        android:textSize="13sp"
        android:ellipsize="end"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:id="@+id/ltvHeaderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>