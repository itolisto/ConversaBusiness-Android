<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee.app.conversabusiness" >

    <uses-feature android:name="android.hardware.camera2.full" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature android:glEsVersion="0x00020000"
        android:required="true"/>

    <!-- [START gcm_permission] -->
    <!-- App receives GCM messages. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="ee.app.conversabusiness.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <!-- Prevent other Android applications from registering and receiving the Android application's messages -->
    <uses-permission android:name="ee.app.conversabusiness.permission.C2D_MESSAGE" />
    <!-- [END gcm_permission] -->

    <application
        android:name="ee.app.conversabusiness.ConversaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".ActivitySplashScreen"
            android:screenOrientation="portrait"
            android:noHistory="true"/>

        <activity-alias
            android:name=".Launcher"
            android:noHistory="true"
            android:targetActivity=".ActivitySplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data android:scheme="conversapp" android:host="user" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="ee.app.conversabusiness.ActivityMain"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversabusiness.ActivitySignIn"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTask" />

        <activity
            android:name="ee.app.conversabusiness.ActivityLogIn"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="ee.app.conversabusiness.ActivitySignUp"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="ee.app.conversabusiness.ActivityForgotPassword"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name=".ActivityChatWall"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversabusiness.ActivityMain" />

        <activity
            android:name="ee.app.conversabusiness.ActivityImageDetail"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversabusiness.ActivityChatWall" />

        <activity
            android:name="ee.app.conversabusiness.ActivityLocation"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />
            
        <activity
            android:name="ee.app.conversabusiness.ActivityCameraCrop"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="ee.app.conversabusiness.settings.ActivitySettingsAccount"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversabusiness.ActivityMain" />

        <activity
            android:name="ee.app.conversabusiness.settings.ActivitySettingsChat"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversabusiness.ActivityMain" />

        <activity
            android:name="ee.app.conversabusiness.settings.ActivitySettingsHelp"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversabusiness.ActivityMain" />

        <activity
            android:name="ee.app.conversabusiness.settings.ActivitySettingsNotifications"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName="ee.app.conversabusiness.ActivityMain" />

        <activity android:name=".notifications.NotificationPressed"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true" />

    	<activity
		    android:name="com.afollestad.materialcamera.CaptureActivity"
		    android:theme="@style/MaterialCamera.CaptureActivity" />
		<activity
		    android:name="com.afollestad.materialcamera.CaptureActivity2"
		    android:theme="@style/MaterialCamera.CaptureActivity" />
        <!-- **************************************************************************************** -->
        <receiver android:name="ee.app.conversabusiness.management.ConnectionChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.ConnectivityManager.CONNECTIVITY_ACTION" />
            </intent-filter>
        </receiver>
        <!-- **************************************************************************************** -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAwg-G3VTF0jS_dyyTcfdZ6pDA2UK9rgYQ" />

        <meta-data
            android:name="io.branch.sdk.BranchKey"
            android:value="key_test_ndl297oYX8yqRLgyhnRoLpidDuc2i3tr" />

        <receiver android:name="io.branch.referral.InstallListener" android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <!-- Receive data in the background with or without displaying a notification. -->
        <service
            android:name=".notifications.onesignal.CustomNotificationExtenderService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.onesignal.NotificationExtender" />
            </intent-filter>
        </service>
        <!-- By default OneSignal will open or resume your launcher Activity when a notification is
            tapped on. You can disable this behavior by adding the meta-data tag -->
        <meta-data android:name="com.onesignal.NotificationOpened.DEFAULT" android:value="DISABLE" />

        <service
            android:name=".contact.ContactIntentService"
            android:exported="false" />
        <service
            android:name=".messaging.MessageIntentService"
            android:exported="false" />
        <service
            android:name=".messaging.CustomMessageService"
            android:exported="false" />
    </application>
</manifest>