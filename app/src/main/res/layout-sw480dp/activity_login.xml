<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:focusableInTouchMode="true"
	android:background="@color/default_white"
	tools:context="ee.app.conversabusiness.ActivityLogIn" >

	<RelativeLayout
		android:layout_gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<android.support.design.widget.TextInputLayout
			android:id="@+id/tilEmail"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp" >

			<EditText
				android:id="@+id/etSignInEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:gravity="bottom"
				android:hint="@string/email"
				android:inputType="textEmailAddress"
				android:textColor="@color/default_black"
				android:textColorHint="@color/default_gray"
				android:textSize="18sp" />
		</android.support.design.widget.TextInputLayout>

		<Button
			android:id="@+id/btnForgotPassword"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tilEmail"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_marginTop="3dp"
			android:layout_marginRight="3dp"
			android:layout_marginEnd="3dp"
			android:background="@null"
			android:gravity="bottom"
			android:textAllCaps="false"
			android:text="@string/forgot_password"
			android:textColor="@color/default_gray" />

		<android.support.design.widget.TextInputLayout
			android:id="@+id/tilPassword"
			android:layout_below="@id/tilEmail"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/btnForgotPassword"
			android:layout_toStartOf="@id/btnForgotPassword"
			android:padding="14dp" >

			<EditText
				android:id="@+id/etSignInPassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:gravity="bottom"
				android:hint="@string/password"
				android:inputType="textPassword"
				android:textColor="@color/default_black"
				android:textColorHint="@color/default_gray"
				android:textSize="18sp" />
		</android.support.design.widget.TextInputLayout>

		<Button
			android:id="@+id/btnSignInIn"
			android:layout_width="175dp"
			android:layout_height="35dp"
			android:layout_below="@+id/btnForgotPassword"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="22dp"
			android:gravity="center"
			android:text="@string/SIGN_IN"
			android:textColor="@drawable/textcolor_white_state"
			android:textSize="20sp"
			android:background="@drawable/button_shape_white" />

		<include android:id="@+id/rlNoInternetNotification"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			layout="@layout/no_internet_notification" />

	</RelativeLayout>
</ScrollView>